        <Label x:Name="lblChoose" Content="Избери място:" Margin="11,30,0,0" AutomationProperties.Name="" Height="48" Width="168" Background="#FFF90303" FontSize="18" FontFamily="Arial Black" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="2"/>
