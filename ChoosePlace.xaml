            <Button x:Name="btn3" Grid.Row="0" Grid.Column="2" Content="3" Click="choosePlace" Background="Green" Grid.ColumnSpan="2" Margin="0,0,70,60" Grid.RowSpan="2"/>
            <Button x:Name="btn4" Grid.Row="0" Grid.Column="3" Content="4" Click="choosePlace" Background="Green" Grid.ColumnSpan="2" Margin="0,0,70,60" Grid.RowSpan="2"/>
            <Button x:Name="btn5" Grid.Row="0" Grid.Column="4" Content="5" Click="choosePlace" Background="Green" Grid.ColumnSpan="2" Margin="3,0,74,60" Grid.RowSpan="2"/>
