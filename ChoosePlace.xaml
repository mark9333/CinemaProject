            <Button x:Name="btn8" Grid.Row="1" Content="8" Click="choosePlace" Background="Green" Grid.ColumnSpan="2" Margin="3,0,67,60" Grid.RowSpan="2" Grid.Column="1"/>
            <Button x:Name="btn9" Grid.Row="1" Grid.Column="2" Content="9" Click="choosePlace" Background="Green" Grid.ColumnSpan="2" Margin="0,0,70,60" Grid.RowSpan="2"/>
