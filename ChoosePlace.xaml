            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.6"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-0.612"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="btnBack" Content="Назад" Click="backClick" Margin="10,0,0,-21" VerticalAlignment="Bottom" Height="51" Width="117" Background="#FF3B0DE8" HorizontalAlignment="Left" Grid.Column="2" Grid.RowSpan="2"/>
    </Grid>
