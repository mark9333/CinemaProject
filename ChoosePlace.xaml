            <Button x:Name="btn11" Grid.Row="1" Grid.Column="4" Content="11" Click="choosePlace" Background="Green" Grid.ColumnSpan="2" Margin="3,0,74,60" Grid.RowSpan="2"/>
            <Button x:Name="btn12" Grid.Row="1" Grid.Column="5" Content="12" Click="choosePlace" Background="Green" Margin="0,0,4,60" Grid.RowSpan="2"/>
            <Button x:Name="btn13" Grid.Row="2" Grid.Column="0" Content="13" Click="choosePlace" Background="Green" Grid.ColumnSpan="2" Margin="0,0,70,60" Grid.RowSpan="2"/>
            <Button x:Name="btn14" Grid.Row="2" Content="14" Click="choosePlace" Background="Green" Grid.ColumnSpan="2" Margin="3,0,67,60" Grid.RowSpan="2" Grid.Column="1"/>
